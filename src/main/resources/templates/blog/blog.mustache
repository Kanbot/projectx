{{>layout/blog/header}}
<body>
<!-- Navigation-->
<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="/">KANBOT</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto py-4 py-lg-0">
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/posts/blog">Home</a></li>
                {{#name}}
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" >
                        {{name}} 님
                    </a></li>
                {{/name}}
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="#">About</a></li>


            </ul>
        </div>
    </div>
</nav>
<!-- Page Header-->
<header class="masthead" style="background-image: url('/js/app/assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>KANBOT Blog</h1>
                    <span class="subheading">개인 공부용 잡다한 블로그</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->

<table class="table table-horizontal table-bordered">

    <div class="row">
        <div class="col-lg-8"></div>
        <div class="col-lg-3">
             <form action="/posts/search" method="get">
            <input type="text" id="search" name="search" style="height: 35px"/>
            <button type="submit"  style=" color: #fff;background-color: #0085A1;
             border-color: #0085A1;   font-weight: 400; border: 1px ; height: 35px;">
                <i class="fas fa-search"></i></button>
             </form>


        </div>


        <div class="col-lg-1"></div>
    </div>
    {{#posts}}
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <!-- Post preview-->
                    <div class="post-preview">
                        <a href="/posts/posts/{{id}}">

                            <h2 class="post-title">{{title}}</h2>
                            <h3 class="post-subtitle">{{category}}</h3>
                        </a>
                        <p class="post-meta">
                            Posted by
                            {{author}}
                            {{modifiedDate}}
                        </p>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4"/>

                </div>
            </div>
        </div>
    {{/posts}}
    {{^posts}}
        <br><br>
        <center> <div><h4> 글이 없습니다</h4></div></center>
        <br><br>

    {{/posts}}
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">

                <div class="d-flex justify-content-end mb-4">
                    <a class="btn btn-primary text-uppercase" href="/posts/insert">글 쓰기</a>
                </div>
                <div class="d-flex justify-content-end mb-4">
                    <a class="btn btn-primary text-uppercase" href="/posts/page?start=0&end=5">1</a>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-primary text-uppercase" href="/posts/page?start=5&end=5">2</a>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-primary text-uppercase" href="/posts/page?start=10&end=5">3</a>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-primary text-uppercase" href="/posts/page?start=15&end=5">4</a>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-primary text-uppercase" href="/posts/page?start=20&end=5">5</a>
                </div>


            </div>

        </div>
        </div>
    </div>
</table>


<!-- Footer-->
<footer class="border-top">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">


                <div class="small text-center text-muted fst-italic">Copyright &copy; KANBOT</div>
            </div>
        </div>
    </div>
</footer>
{{>layout/blog/footer}}
